#echo '  <string>MEFIlogout.job</string>' >> ${HOME}/.MEFIlogout.plist
#echo '  <key>Nicer</key>' >> ${HOME}/.MEFIlogout.plist
#echo '  <integer>1</integer>' >> ${HOME}/.MEFIlogout.plist
#echo '  <key>ProgramArguments</key>' >> ${HOME}/.MEFIlogout.plist
#echo '  <array>' >> ${HOME}/.MEFIlogout.plist
#echo '      <string>/Users/'"$(whoami)"'/Library/Application Support/MountEFI/MEFIlogout.sh</string>' >> ${HOME}/.MEFIlogout.plist
#echo '  </array>' >> ${HOME}/.MEFIlogout.plist
#echo '  <key>RunAtLoad</key>' >> ${HOME}/.MEFIlogout.plist
#echo '  <true/>' >> ${HOME}/.MEFIlogout.plist
#echo '  <key>EnableGlobbing</key>' >> ${HOME}/.MEFIlogout.plist
