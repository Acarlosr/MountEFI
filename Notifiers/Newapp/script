export LANG=en_US.UTF-8

#  Created by Андрей Антипов on 06.10.2020.#  Copyright © 2020 gosvamih. All rights reserved.

prog_vers="1.8.0"
edit_vers="057"

#if [[ $(ps xao tty,command | grep -v grep | grep "MountEFI"| egrep ttys[0-9]* | grep /bin/bash | egrep -w "MountEFI" | wc -l |  bc ) = 0 ]]; then 
#rm -f "${HOME}//Library/Application Support/MountEFI/visible" "${HOME}//Library/Application Support/MountEFI/invisible"; fi

#if [[ ! $(launchctl list | grep "MEFIlogout.job" | cut -f3 | grep -x "MEFIlogout.job") ]]; then

### LOGOUT_HOOK
#echo '<?xml version="1.0" encoding="UTF-8"?>' >> ${HOME}/.MEFIlogout.plist
